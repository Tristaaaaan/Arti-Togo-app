<ElementCard@MDCard>:
    padding:dp(10)
    spacing:dp(5)
    radius:dp(25)
    ripple_behavior: True
    image: ''
    text: ''
    subtext: ''
    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            text:root.subtext
            font_style:"Caption"

            
<Menu_Widget>:
    orientation: 'vertical'

    ToolBarSpace:
        MDTopAppBar:
            id: toolbar
            elevation: 0
            title: 'MENU'
            left_action_items: [["arrow-left", lambda x: app.go_to_previous(root)]]
            right_action_items: [["dots-vertical", lambda x: root.show_options()]]
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height



        GridLayout:
            cols: 2
            rows: 8
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            row_force_default: True
            row_default_height: 200

