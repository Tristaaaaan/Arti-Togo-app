# Cheng - Step 1
<ChengWindow1>:
    name: "cheng1"
    pd: pd
    pf: pf
    pg: pg
    bcrk: bcrk
    frk: frk
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.9, .95
        pos_hint: {'center_x': 0.50, 'center_y': 0.50}

        # Headers
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: .4
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            MDIconButton:
                icon: 'chevron-left'
                theme_text_color: 'Custom'
                text_color: 'gray'
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction = "right"
            MDLabel:
                text: "Calculation of Coordinates"
                text_color: "gray"
                size_hint_y: .3
                valign: 'middle'
                theme_text_color: 'Custom'
                font_style: 'H6'
            MDLabel:
                text: "Step 1"
                text_color: "black"
                size_hint_y: .2
                theme_text_color: 'Custom'
                font_style: 'H2'
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            size_hint_y: .5
            MDTextField:
                id: pd
                mode: "rectangle"
                hint_text: "Pd"
                font_size: "15dp"
            MDTextField:
                id: pf
                mode: "rectangle"
                hint_text: "Pf"
                font_size: "15dp"
            MDTextField:
                id: pg
                mode: "rectangle"
                hint_text: "Pg"
                font_size: "15dp"
        # Outputs  
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            MDGridLayout:
                cols: 1
                size_hint_x: .80
                spacing: 10
                ElementCard:
                    id: bcrk
                    text: ''
                    subtext:"BRCK"

                ElementCard:
                    id: frk
                    text: ''
                    subtext:"BRCK"

        # Button
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2
            MDIconButton:
                icon: "refresh"
                pos_hint: {'center_y': 0.5}
               # on_release:
                    #app.root.current = "second"
                   # root.manager.transition.direction = "right"
            MDFlatButton:
                text: "Step 2"
                font_name: "RobotoMedium"
                size_hint_x: 0.9
                pos_hint: {'center_y': 0.5}
                theme_text_color: 'Custom'
                text_color: [1, 1, 1, 1]
                md_bg_color: [20/255, 20/255, 20/255, 1]
                border_radius: 20
                radius: [15]
                on_release:
                    root.validate_change_step1()

<ElementCard3@MDCard>:
    md_bg_color:69/255,55/255,86/255,1
    text: ''
    subtext:''
    halign: 'right' 
