# First Window

<ClickableTextField>
    passw: passw
    MDTextField:
        id: passw
        password: True
        hint_text: "Password"
        mode: "rectangle"
        font_size: "15dp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            passw.password = False if passw.password is True else True
<FirstWindow>:
    name: "first"
    password:password
    user_id: user_id
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: .9, None
        spacing: 30
        height: dp(200)
        pos_hint: {'center_x': 0.50, 'center_y': 0.50}
        MDGridLayout:
            spacing: 30
            cols: 1
    
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            MDTextField:
                id: user_id
                mode: "rectangle"
                text_align: 'center'
                hint_text: "User ID"
                disabled: True
            ClickableTextField:
                id: password
            MDFlatButton:
                text: "Login"
                font_name: "RobotoMedium"
                text_color: "white"
                size_hint_x: .95
                pos_hint: {'center_x': 0.50, 'center_y': 0.50}
                theme_text_color: "Custom"
                md_bg_color: [20/255, 20/255, 20/255, 1]
                on_release:
                    root.login()
