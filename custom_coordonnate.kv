<Check@MDCheckbox>:
    group: 'group1'
    size_hint: None, None
    size: dp(48), dp(48)
    
<CoordonneeWidget>:
    orientation: 'vertical'

    ToolBarSpace:
        MDTopAppBar:
            id: toolbar
            elevation: 0
            title: 'Calcul de coordonnee'
            left_action_items: [["arrow-left", lambda x: app.go_to_previous(root)]]
            right_action_items: [["dots-vertical", lambda x: root.show_options()]]

    MDBoxLayout:
        padding: 20
        spacing: 20
        orientation: 'vertical'
        
        MDBoxLayout:
            # padding: 20
            adaptive_height: True

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: .1
                spacing: 5
                Check:
                    id: degree_checkbox
                    active: True
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release: 
                        self.active = True if self.active else not self.active
                        root.check_aab_value()

                MDLabel:
                    text: 'Deg'
                    size_hint_x: None
                    font_style: "Caption"

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: .1
                spacing: 5
                Check:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release:
                        self.active = True if self.active else not self.active
                MDLabel:
                    text: 'Mil'
                    font_style: "Caption"
                    size_hint_x: None

        MDBoxLayout:
            adaptive_height: True
            size_hint_y: 1
            MDBoxLayout:
                orientation: 'vertical'
                spacing: 5
                MDBoxLayout:
                    # adaptive_height: True
                    orientation: 'horizontal'
                    spacing: 8
                    MDTextField:
                        id: Xa
                        mode: "rectangle"
                        input_filter: "float"
                        hint_text: "Xa"
                    MDTextField:
                        id: Ya
                        mode: "rectangle"
                        input_filter: "float"
                        hint_text: "Ya"

                MDBoxLayout:
                    # adaptive_height: True
                    orientation: 'horizontal'
                    spacing: 8
                    MDTextField:
                        id: Ha
                        mode: "rectangle"
                        input_filter: "float"
                        hint_text: "Ha"
                    MDTextField:
                        id: aab
                        mode: "rectangle"
                        input_filter: "float"
                        hint_text: "aab"

                MDBoxLayout:
                    # adaptive_height: True
                    spacing: 8
                    orientation: 'horizontal'
                    MDTextField:
                        id: Dab
                        mode: "rectangle"
                        input_filter: "float"
                        hint_text: "Dab"
                    MDTextField:
                        id: e
                        mode: "rectangle"
                        input_filter: "float"
                        hint_text: "e"
        
        MDBoxLayout:
            spacing: 15
            pos_hint: {'center_x': .5, 'top_y': 1}
            size_hint_y: .1
            RectangularElevationButton:
                id: effacer
                md_bg_color: (188/255,0,0,1)
                # elevation: 4
                # shadow_offset: 0, 6
                # size_hint_x: .3
                # size_hint_y: .2
                # radius: 13
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                Button:
                    background_normal: 'button_background.png'
                    # background_down: ''
                    # background_color: (0,0,0,0)
                    # color: 1,1,1,1
                    color: 0,0,0,1
                    pos: effacer.pos
                    size: effacer.size
                    halign: 'center'
                    font_size: 20
                    text: "Effacer"
                    on_release: root.clear_fields()

            RectangularElevationButton:
                id: validation
                md_bg_color: (0,188/255,0,1)
                # elevation: 4
                # shadow_offset: 0, 6
                # size_hint_x: .3
                # size_hint_y: .2
                # radius: 13
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                Button:
                    background_normal: 'button_background.png'
                    # background_down: ''
                    # background_color: (0,0,0,0)
                    # color: 1,1,1,1
                    color: 0,0,0,1
                    pos: validation.pos
                    size: validation.size
                    halign: 'center'
                    font_size: 20
                    text: "Valider"
                    on_release: root.validate('+')

            RectangularElevationButton:
                id: retour
                md_bg_color: (0,0,0,1)
                # elevation: 4
                # shadow_offset: 0, 6
                # size_hint_x: .3
                # size_hint_y: .2
                # radius: 13
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                Button:
                    background_normal: 'button_background.png'
                    # background_down: ''
                    # background_color: (0,0,0,0)
                    # color: 1,1,1,1
                    color: 0,0,0,1
                    pos: retour.pos
                    size: retour.size
                    halign: 'center'
                    font_size: 20
                    text: "Retour"
                    on_release: root.return_to_home()

            # MDFillRoundFlatButton:
            #     font_size: 20
            #     text: "Valider"
            #     md_bg_color: (0,188/255,0,1)
            #     on_release: root.validate('+')

            # MDFillRoundFlatButton:
            #     font_size: 20
            #     text: "Retour"
            #     # md_bg_color: (0,0,0,1)
            #     source: 'assets/button.png'
            #     allow_stretch: True
            #     on_release: root.return_to_home()

        GridLayout:
            cols: 2
            size_hint_y: .9
            MDBoxLayout:
                Label:
                    text: 'Xb ='
                    # font_size: 25
                    size_hint_x: .3
                    color: 0,0,1,1
                    bold: True

                Label:
                    id: result_Xb
                    text: ""
                    input_filter: "float"
                    # font_size: 17
                    color: 0,0,1,1
                    bold:True

            MDBoxLayout:
                Label:
                    text: 'Yb ='
                    # font_size: 25
                    size_hint_x: .3
                    color: 0,0,1,1
                    bold:True

                Label:
                    id: result_Yb
                    text: ""
                    input_filter: "float"
                    # font_size: 17
                    color: 0,0,1,1
                    bold:True

            MDBoxLayout:
                Label:
                    text: 'Hb ='
                    # font_size: 25
                    size_hint_x: .3
                    color: 1,0,0,1
                    bold:True

                Label:
                    id: result_Hb
                    text: ""
                    input_filter: "float"
                    # font_size: 17
                    color: 1,0,0,1
                    bold:True

