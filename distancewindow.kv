# Distance

<Check2@MDCheckbox>:
    group: 'group2'
    size_hint: None, None
    size: dp(48), dp(48)
    
<DistanceWindow>:
    name: "dist"
    deg: deg
    dab: dab
    a: a
    b: b
    dac: dac
    dbc: dbc
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: .8, .95
        spacing: 20
        pos_hint: {'center_x': 0.50, 'center_y': 0.50}

        # Headers
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            spacing: 10
            MDIconButton:
                icon: 'chevron-left'
                theme_text_color: 'Custom'
                text_color: 'gray'
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction = "right"
            MDLabel:
                text: "Calculation of Distance"
                text_color: "gray"
                size_hint_y: .2
                valign: 'middle'
                theme_text_color: 'Custom'
                font_style: 'H6'
        
        # Inputs
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            size_hint_y: .8
            MDBoxLayout:
                size_hint_y: .1
                orientation: 'horizontal'
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    Check2:
                        id: deg
                        active: True
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        on_release: self.active = True if self.active else not self.active
                    MDLabel:
                        text: 'Deg'
                        size_hint_x: None
                        font_style: "Caption"
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    Check2:
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        on_release: self.active = True if self.active else not self.active
                    MDLabel:
                        text: 'Mil'
                        font_style: "Caption"
                        size_hint_x: None
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: .2
                spacing: 10
                MDTextField:
                    id: dab
                    mode: "rectangle"
                    hint_text: "Dab"
                MDTextField:
                    id: a
                    mode: "rectangle"
                    hint_text: "A"
                MDTextField:
                    id: b
                    mode: "rectangle"
                    hint_text: "B"

        # Outputs
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            size_hint_y: .1
            MDLabel:
                text: "Dac"
                pos_hint: {'center_x': 0.50, 'center_y': 0.50}
                bold: "True"
                size_hint_x: .2
                font_style: "Body1"
                theme_text_color: "Custom"
                text_color: [20/255, 20/255, 20/255, 1]
            MDTextField:
                id: dac
                size_hint_x: .8
                disabled: True
                font_style: "Caption"
                color_mode: 'custom'
                halign: "center"
                pos_hint: {'center_x': 0.50, 'center_y': 0.50}
                line_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1

        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.50, 'center_y': 0.50}
            size_hint_y: .1
            MDLabel:
                text: "Dbc"
                pos_hint: {'center_x': 0.50, 'center_y': 0.50}
                bold: "True"
                size_hint_x: .2
                font_style: "Body1"
                theme_text_color: "Custom"
                text_color: [20/255, 20/255, 20/255, 1]
            MDTextField:
                id: dbc
                size_hint_x: .8
                disabled: True
                font_style: "Caption"
                color_mode: 'custom'
                halign: "center"
                pos_hint: {'center_x': 0.50, 'center_y': 0.50}
                line_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1

        # Buttons
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: .2
            MDIconButton:
                icon: "refresh"
                pos_hint: {'center_y': 0.5}
               # on_release:
                    #app.root.current = "second"
                   # root.manager.transition.direction = "right"
            MDFlatButton:
                text: "Proceed"
                font_name: "RobotoMedium"
                size_hint_x: 0.9
                pos_hint: {'center_y': 0.5}
                theme_text_color: 'Custom'
                text_color: [1, 1, 1, 1]
                md_bg_color: [20/255, 20/255, 20/255, 1]
                border_radius: 20
                radius: [15]
                on_release:
                    root.validate_distance()

